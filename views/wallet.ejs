<%- include('partials/head') %>
<style>
  body {
    background-color: #121212;
    color: white;
    font-family: 'Prompt', sans-serif;
  }

  .wallet-card {
    background: linear-gradient(135deg, #ff7b00, #ff0080);
    color: white;
    border-radius: 20px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
    max-width: 400px;
    margin: 100px auto;
  }

  .coins {
    font-size: 3rem;
    font-weight: bold;
  }

  .btn-add {
    margin-top: 1rem;
    background-color: white;
    color: #ff0080;
    border: none;
    border-radius: 10px;
    padding: 0.6rem 1.5rem;
    font-weight: bold;
    transition: 0.3s;
  }

  .btn-add:hover {
    background-color: #ff7b00;
    color: white;
  }

  .container {
    display: flex;
  }
</style>
</head>
<%- include('partials/navbar') %>

<body>
  <div class="container">
    <div class="wallet-card">
      <h2>กระเป๋าเหรียญของ</h2>
      <h2><%= user.name %></h2>
      <p class="coins"><%= user.coins %> Coins</p>
      <form action="/addcoin" method="POST">
        <label for="coin">กรอกจำนวนเหรียญ (1 บาท = 1 Coin)</label>
        <input type="number" id="coin" name="coin" required class="form-control mt-2 mb-3">
        <button type="submit" class="btn-add">เติมเหรียญ</button>

      </form>
    </div>
    <div class="wallet-card">
      <h2>กระเป๋าเหรียญของ</h2>
      <h2><%= user.name %></h2>
      <p class="coins"><%= user.coins %> Coins</p>
      <form action="/delcoin" method="POST">
        <label for="coin">กรอกจำนวนเหรียญ (1 บาท = 1 Coin)</label>
        <input type="number" id="coin" name="coin" required class="form-control mt-2 mb-3">
        <button type="submit" class="btn-add">ถอนเงิน</button>

      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>