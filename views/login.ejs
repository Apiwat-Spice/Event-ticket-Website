<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>Event Ticketing</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css">
  <style>
    html,
    body {
      overflow: hidden;
      height: 100%;
    }

    h1 {
      text-align: center;
      font-size: 4em;
      font-weight: bold;
    }

    body {
      margin: 0;
      height: 100vh;
      background-color: #000;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      font-family: "Poppins", sans-serif;
    }

    a {
      text-decoration: none;
      color: rgb(255, 255, 255);
    }

    .login-container {
      text-align: left;
      background: rgba(0, 0, 0, 0.8);
      padding: 40px;
      border-radius: 10px;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    input {
      font-size: 20px;
      background-color: #2d2d2d;
      border: none;
      border-radius: 20px;
      padding: 10px 15px;
      width: 250px;
      color: white;
    }

    .btn-group {
      display: flex;
      gap: 50px;
      margin-top: 20px;
    }

    button {
      padding: 15px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
    }

    .mb-3 {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .btn-group button {
      border-radius: 30px;
    }

    .sign {
      display: inline-block;
      border-radius: 30px;
      background: linear-gradient(180deg, #ff0000, #006eff);
      padding: 2px;
      text-decoration: none;
    }

    .sign span {
      display: block;
      background-color: #000;
      color: white;
      padding: 12px 20px;
      border-radius: 27px;
      text-align: center;
      font-weight: bold;
    }

    .sign a {
      text-decoration: none;
    }

    .guest {
      background-color: #505050;
      color: white;
    }
    .guest:hover{
      transform: scale(1.3);
      transition: 1s;
    }
    .sign:hover{
      transform: scale(1.3);
      transition: 1s;
    }
    .log:hover{
      transform: scale(1.3);
      transition: 1s;
    }

    .crowd {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 300px;
      background: url("/pic/crowd.png") no-repeat bottom center;
      background-size: cover;
      filter: brightness(0) invert(1) grayscale(1) opacity(0.6);
    }
  </style>
</head>

<body>
  <div class="login-container">
    <h1 class="header" style="margin-top: -45%;">Login</h1>
    <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/login" method="POST" class="login-box">
      <div class="mb-3">
        <label for="email">Email</label>
        <input class="form-control1" name="email" type="email" id="email" required>
      </div>
      <div class="mb-3">
        <label for="password">Password</label>
        <input class="form-control" name="password" type="password" id="password" required>
      </div>
      <div class="btn-group">
        <a href="/register" class="sign"><span>Sign in</span></a>
        <button class="guest" type="button"><a href="/events">guest</a></button>
        <button class="log">Log in</button>
      </div>
    </form>
  </div>
  <div class="crowd"></div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>