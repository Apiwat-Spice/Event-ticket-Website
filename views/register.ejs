<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>Event Ticketing</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-size: 1.3em;
      background-color: black;
      color: white;
    }

    h2 {
      text-align: center;
      font-size: 3em;
      margin: 0px;
    }

    .mb-3 {
      display: grid;
    }

    .text-form {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(4);
      padding: 10px;
      gap: 20px;
      margin-right: 20%;
      margin-left: 20%;
    }

    input,
    select {
      font-size: 20px;
      border-radius: 10px;
      height: 40px;
      background-color: #2d2d2d;
      border: none;
      border-radius: 20px;
      color: white;
    }

    .btn {
      margin-left: 25%;
      padding: 30px;
      font-size: 2em;
      border-radius: 25px;
      width: 75%;
      cursor: pointer;
    }

    .container {
      position: relative;
      z-index: 1;
      /* ทำให้ฟอร์มอยู่เหนือ crowd */
    }

    .back {
      font-size: 1.5em;
      border-radius: 25px;
      width: 30%;
      height: 30%;
      background-color: rgb(92, 92, 92);
      padding-bottom: 10%;
      cursor: pointer;

    }

    button {
      border: none;
    }

    .crowd {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 300px;
      background: url("/pic/crowd.png") no-repeat bottom center;
      background-size: cover;
      filter: brightness(0) invert(1) grayscale(1) opacity(0.6);
    }

    .back a {
      text-decoration: none;
      color: #ffffff;
    }

    .back:hover {
      transform: scale(1.1);
      transition: 1s;
    }

    .btn:active {
      transform: scale(1.1);
      transition: 1s;
    }
  </style>
</head>

<body>
  <div class="container">
    <h2>Register</h2>
    <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/register" method="POST" class="text-form">
      <div class="mb-3">
        <label for="firstname">firstname</label>
        <input class="form-control" name="firstname" id="firstname" required>
      </div>
      <div class="mb-3">
        <label for="lastname">lastname</label>
        <input class="form-control" name="lastname" id="lastname" required>
      </div>
      <div class="mb-3">
        <label for="Username">Username</label>
        <input class="form-control" name="Username" id="Username" required>
      </div>
      <div class="mb-3">
        <label for="email">Email</label>
        <input class="form-control" name="email" type="email" id="email" required>
      </div>
      <div class="mb-3">
        <label>Role</label>
        <select name="role" class="form-select">
          <option value="attendee">ผู้เข้าร่วม (Attendee)</option>
          <option value="organizer">ผู้จัดงาน (Organizer)</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="birthdate">Birthdate</label>
        <input class="form-control" name="birthdate" type="date" id="birthdate" required>
      </div>
      <div class="mb-3">
        <label for="password">Password</label>
        <input class="form-control" name="password" type="password" id="password" required>
      </div>
      <div class="mb-3">
        <label for="Confirmpassword">Confirm password</label>
        <input class="form-control" name="Confirmpassword" type="password" id="Confirmpassword" required>
      </div>

      <button class="back" type="button"><a href="/login">back</a></button>
      <button class="btn">Sign In</button>
    </form>
  </div>
  <div class="crowd"></div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>