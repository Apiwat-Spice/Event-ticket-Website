<%- include('partials/head') %>
<style>
  a {
    color: white;
    text-decoration: none;
  }
</style>
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">

    <% if (!currentUser) { %>
      <!-- Guest -->
      <h3>กรุณาเข้าสู่ระบบเพื่อดูโปรไฟล์</h3>
      <a href="/login" class="btn btn-primary mt-3">เข้าสู่ระบบ</a>

    <% } else if (currentUser.role === 'organizer') { %>
      <!-- Organizer -->
      <h2>โปรไฟล์ Organizer</h2>
      <p><strong>ชื่อ:</strong> <%= currentUser.name %></p>
      <p><strong>อีเมล:</strong> <%= currentUser.email %></p>
      <a href="/editprofile" class="btn btn-dark mb-3">แก้ไขโปรไฟล์</a>
      <hr>

      <h4>อีเวนต์ที่คุณสร้าง</h4>
      <% if (events && events.length > 0) { %>
        <ul class="list-group">
          <% events.forEach(e => { %>
            <li class="list-group-item">
              <% if (e.image) { %>
                <img src="<%= e.image %>" style="width:80px; height:50px; object-fit:cover; margin-right:10px;">
              <% } %>
              <strong><%= e.title %></strong>
              <br>วันที่: <%= e.startDate ? e.startDate.toLocaleDateString() : '-' %> ถึง <%= e.endDate ? e.endDate.toLocaleDateString() : '-' %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>คุณยังไม่ได้สร้างอีเวนต์เลย</p>
      <% } %>

    <% } else if (currentUser.role === 'attendee') { %>
      <!-- Attendee -->
      <h2>โปรไฟล์ของฉัน</h2>
      <p><strong>ชื่อ:</strong> <%= currentUser.name %></p>
      <p><strong>อีเมล:</strong> <%= currentUser.email %></p>
      <a href="/editprofile" class="btn btn-dark mb-3">แก้ไขโปรไฟล์</a>
      <hr>

      <h4>ประวัติการสั่งซื้อ</h4>

      <% if (tickets && tickets.length > 0) { %>
        <!-- <ul class="list-group mb-4">
          <% tickets.forEach(t => { %>
            <li class="list-group-item">
              <% if (t.event) { %>
                <strong><%= t.event.title %></strong> - จำนวน <%= t.quantity %> ใบ
                <div><small>วันที่ซื้อ: <%= t.purchasedAt ? t.purchasedAt.toLocaleString() : '-' %></small></div>
              <% } else { %>
                <strong>(อีเวนต์นี้ถูกลบไปแล้ว)</strong> - จำนวน <%= t.quantity %> ใบ
              <% } %>
            </li>
          <% }) %>
        </ul> -->

        <div class="row">
          <% tickets.forEach(t => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= t.event ? t.event.title : '(อีเวนต์ถูกลบ)' %></h5>
                  <p class="mb-1">จำนวน: <%= t.quantity %> ใบ</p>
                  <p class="mb-1"><small>วันที่ซื้อ: <%= t.purchasedAt ? t.purchasedAt.toLocaleString() : '-' %></small></p>

                  <% if (t.qrCodeData) { %>
                    <div class="text-center mt-3">
                      <img src="<%= t.qrCodeData %>" alt="QR Code" style="width: 120px; height: 120px;">
                      <p class="text-muted mt-2 mb-0"><small>QR Ticket ID: <%= t.ticketCode %></small></p>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

      <% } else { %>
        <p>คุณยังไม่ได้ซื้อบัตรใด ๆ</p>
      <% } %>

    <% } %> <!-- ปิด else if role -->

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
