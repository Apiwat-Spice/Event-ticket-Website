<%- include('../partials/header') %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>อีเวนต์</h2>
    <form class="d-flex" method="GET" action="/events">
      <input name="q" class="form-control me-2" placeholder="ค้นหา..." value="<%= q %>">
      <button class="btn btn-outline-secondary">ค้นหา</button>
    </form>
  </div>

  <div class="row">
    <% events.forEach(e=> { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <% if (e.image) { %>
            <img src="<%= e.image %>" class="card-img-top" style="height:180px; object-fit:cover;">
            <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <%= e.title %>
                </h5>
                <p class="card-text text-truncate">
                  <%= e.description %>
                </p>
                <p><strong>วันที่เริ่มงาน:</strong>
                  <%= e.startDate ? new Date(e.startDate).toLocaleString('th-TH', { dateStyle: 'long' ,
                    timeStyle: 'short' }) : '-' %>
                </p>
                <p><strong>วันที่สิ้นสุด:</strong>
                  <%= e.endDate ? new Date(e.endDate).toLocaleString('th-TH', { dateStyle: 'long' , timeStyle: 'short'
                    }) : '-' %>
                </p>

                <p class="mb-2"><strong>สถานที่:</strong>
                  <%= e.location || '-' %>
                </p>

                <!-- ✅ แสดงตัวจับเวลาถอยหลัง -->
                <% if (e.date) { %>
                  <p class="text-danger fw-bold countdown" data-date="<%= e.date.toISOString() %>">
                    กำลังโหลดเวลา...
                  </p>
                  <% } %>

                    <a href="/events/<%= e._id %>" class="btn btn-primary mt-auto">ดูรายละเอียด</a>
              </div>
        </div>
      </div>
      <% }) %>
  </div>

  <!-- ✅ ใส่ script นับถอยหลัง -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const timers = document.querySelectorAll('.countdown');

      timers.forEach(timer => {
        const targetDate = new Date(timer.getAttribute('data-date')).getTime();

        const updateCountdown = () => {
          const now = new Date().getTime();
          const distance = targetDate - now;

          if (distance <= 0) {
            timer.textContent = "งานได้เริ่มขึ้นแล้ว!";
            timer.classList.remove('text-danger');
            timer.classList.add('text-success');
            return;
          }

          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const mins = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const secs = Math.floor((distance % (1000 * 60)) / 1000);

          timer.textContent = `เหลืออีก ${days} วัน ${hours} ชม. ${mins} นาที ${secs} วินาที`;
        };

        updateCountdown();
        setInterval(updateCountdown, 1000);
      });
    });
  </script>

  <%- include('../partials/footer') %>
