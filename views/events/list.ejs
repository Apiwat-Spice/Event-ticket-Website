<%- include('../partials/head') %>
</head>
<body>

  <%- include('../partials/navbar') %>
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>อีเวนต์</h2>
      <form class="d-flex" method="GET" action="/events">
        <input name="q" class="form-control me-2" placeholder="ค้นหา..." value="<%= q %>">
        <button class="btn btn-outline-secondary">ค้นหา</button>
      </form>
    </div>

    <div class="row">
      <% events.forEach(e => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <% if (e.image) { %>
          <img src="<%= e.image %>" class="card-img-top" style="height:180px; object-fit:cover;">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= e.title %></h5>
            <p class="card-text text-truncate"><%= e.description %></p>
            <p class="mb-1"><strong>วันที่:</strong> <%= e.date ? e.date.toLocaleString() : '-' %></p>
            <p class="mb-2"><strong>สถานที่:</strong> <%= e.location || '-' %></p>
            <a href="/events/<%= e._id %>" class="btn btn-primary mt-auto">ดูรายละเอียด</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>